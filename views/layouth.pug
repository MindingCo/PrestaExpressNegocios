    body.row
        #loader-wrapper
            #loader.display-container(style='background-color: rgba(255,255,255,0.5); position: fixed; width: 100%; height: 100%; z-index: 100;')
                img.display-middle(src="img/loader.gif")
            .loader-section.section-left
            .loader-section.section-right
        aside.col.quarter.xl-sixth.hide_s.p-0.white
            ul
                li.user-details
                    .row
                        h5.Omargin.pb-3.white-text.blocked= user.nom_usu
                        p.user-roal= user.id_tus==1?'Cliente':user.id_tus==2?'Asesor':user.id_tus==3?'Gerente':'Administrador'
                li.no-padding
                    .container
                        ul.col.five_sixths.push-twelfth
                            if user.id_tus == 1
                                include asidecli
                            else if user.id_tus == 2
                                include asidease
                            else if user.id_tus == 3
                                include asideger
                            else if user.id_tus == 4
                                include asideadm
        #content.col.full.m-three_quarters.xl-five_sixths.content.container.grey.lighten-3.sha-i
            .row.mt-1
                include home
        nav.col.full.hide_m-up.shad.plum_plate.white-text
            if user.id_tus == 1
                include navcli
            else if user.id_tus == 2
                include navase
            else if user.id_tus == 3
                include navger
            else if user.id_tus == 4
                include navadm
        if user.id_tus == 1 || user.id_tus == 3
            include chatp
            
            
            
