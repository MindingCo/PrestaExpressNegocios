append jscss
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
    style(type="text/css").
        div > input {
            margin-left: 42px !important;
        }
        #logout {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        footer {
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
        #save-changes {
            background-color: white;
            display: flex;
            justify-content: center;
            align-items: center;
        }
append content
    .col.full.xl-half
        .card
            li.card-header.indigo.accent-2
                .card-title
                    img.icon-big.margin.right(src="/img/icons/white/icons8_Credit_Card_50px.png", alt="")
                    h4.flight-card-title.inline Cambiar contraseña
            .white
                .card-content.white
                    .row.flight-state-wrapper
                        .col.full.m-two_thirds.l-seven_twelfths.ha-center
