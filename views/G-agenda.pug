extends layouth

append jscss
    link(rel='stylesheet', href='/css/cliente.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
append content   
        blockquote
          h2= user.nom_usu
        .row
          .col.s4
          .col.s4
          .col.s4  
            input.right-align(placeholder='Filtrar asesor')
        
        br
        .divider
        .section
          table.responsive-table
            thead 
              tr  
                th Id Asesor
                th Nombre
                th Email
                th Telefono
                th Zona
            tbody
              for asesor in asesores
                tr
                  td= asesor.id_ase
                  td= asesor.nom_ase
                  td= asesor.ema_ase
                  td= asesor.tel_ase
                  td= asesor.nom_zon
                
      
    
