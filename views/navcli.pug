aside.hide-m-down.w.fifth.h-full.floating-r
    .grey-text.h-full.w.full.lighten-4.white
        div.display-container
            img(src="/img/banner-header.jpg", style="width:100%;", alt="Avatar")
            .display-bottomleft.container.white-text(style="width:100%")
                h4.truncate= user.nom_cli
        .container
            p.truncate(title=user.id_pre)
                img.nav-icon.margin-r.va-middle(src="/img/icons/icons8_Credit_Card_50px.png", alt="")
                span= user.id_pre
            hr
            a(href="/inicio")
                p.large
                    b.indigo-text.text-darken-4.truncate(title= "Inicio")
                        img.nav-icon.va-middle.margin-r(src="/img/icons/indigo/icons8_Home_50px.png", alt="")
                        span Inicio
            a(href="/cliente/asesor")
                p.large
                    b.indigo-text.text-darken-4.truncate(title= "Tu Asesor")
                        img.nav-icon.va-middle.margin-r(src="/img/icons/indigo/icons8_User_50px.png", alt="")
                        span Tu Asesor
            p.large.chat-animation
                b.indigo-text.text-darken-4.truncate(title= "Chat")
                    img.nav-icon.va-middle.margin-r(src="/img/icons/indigo/icons8_Chat_50px.png", alt="")
                    span Chat
            a(href='/sesion')
                p.large
                    b.indigo-text.text-darken-4.truncate(title= "Sesión")
                        img.nav-icon.va-middle.margin-r(src="/img/icons/indigo/icons8_Access_50px.png", alt="")
                        span Sesión
