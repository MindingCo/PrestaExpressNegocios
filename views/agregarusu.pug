                    p.w-6.befor-ipt Superior
                    .ipt.w-6
                        input.w-85(type='text',name='supe', required)
                .camp    
                    p.w-6.befor-ipt Zona
                    .ipt.w-6
                        input.w-85(type='text',name='zona', required)
                .camp    
                    p.w-6.befor-ipt Tipo de usuario
                    .ipt.w-6
                        input.w-85(type='text',name='tipo', required)
                
                input.btn(type='submit', value='Registrar')
