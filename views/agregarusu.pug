                    p.w-6.befor-ipt Confirmar contraseña nueva
                    .ipt.w-6
                        input.w-85(type='password',name='repassword', required)
                        img(src='/img/icons/icons8_Eye_32px.png')
                .camp    
                    p.w-6.befor-ipt Nombre
                    .ipt.w-6
                        input.w-85(type='text',name='nombre', required)
                
                .camp    
                    p.w-6.befor-ipt Email
